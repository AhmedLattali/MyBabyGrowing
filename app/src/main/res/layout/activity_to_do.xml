<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/more_screen_bg_blur"
    >

    <RelativeLayout
        android:id="@id/topLayout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/phone_top_bar_height"
        android:layout_alignParentTop="true"
        android:background="@color/top_bar_background">

        <TextView
            android:id="@id/topHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/apptTitle"
            android:textColor="#ffffffff"
            android:textSize="@dimen/heading_phone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/addQuesThirdLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topLayout"
        android:background="@drawable/email_input">

        <TextView
            android:id="@+id/questionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="45.0dip"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_alignParentRight="true"
            android:paddingBottom="15.0dip"
            android:paddingLeft="15.0dip"
            android:paddingRight="15.0dip"
            android:paddingTop="15.0dip"
            android:text="@string/first_to_do"
            android:textColor="#ff5a5a5a"
            android:textSize="16.0sp" />

        <ImageView
            android:id="@+id/checkBoxIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15.0dip"
            android:src="@drawable/grey_checkbox" />
    </RelativeLayout>

    <View
        android:id="@id/firstSeparator"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@id/addQuesThirdLayout"
        android:background="@android:color/darker_gray" />
    <RelativeLayout
        android:id="@+id/addQuesThirdLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstSeparator"
        android:background="@drawable/email_input"
        >

        <TextView
            android:id="@+id/questionText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"

            android:layout_marginRight="45.0dip"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingBottom="15.0dip"
            android:paddingLeft="15.0dip"
            android:paddingRight="15.0dip"
            android:paddingTop="15.0dip"
            android:text="@string/second_to_do"
            android:textColor="#ff5a5a5a"
            android:textSize="16.0sp" />

        <ImageView
            android:id="@+id/checkBoxIcon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15.0dip"
            android:src="@drawable/grey_checkbox" />
    </RelativeLayout>
    <View
        android:id="@id/secondSeparator"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@id/addQuesThirdLayout2"
        android:background="@android:color/darker_gray" />
    <RelativeLayout
        android:id="@+id/_addQuesThirdLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/email_input"
        android:layout_below="@id/secondSeparator">

        <TextView
            android:id="@+id/_questionText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="45.0dip"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingBottom="15.0dip"
            android:layout_alignParentRight="true"

            android:paddingLeft="15.0dip"
            android:paddingRight="15.0dip"
            android:paddingTop="15.0dip"
            android:text="ما يجب أن أقوم به 3"
            android:textColor="#ff5a5a5a"
            android:textSize="16.0sp" />

        <ImageView
            android:id="@+id/_checkBoxIcon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15.0dip"
            android:src="@drawable/grey_checkbox" />
    </RelativeLayout>
    <View
        android:id="@id/thirdSeparator"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@id/_addQuesThirdLayout2"
        android:background="@android:color/darker_gray" />
    <RelativeLayout
        android:id="@+id/_addQuesThirdLayout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/email_input"
        android:layout_below="@id/thirdSeparator">

        <TextView
            android:id="@+id/_questionText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="45.0dip"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingBottom="15.0dip"
            android:paddingLeft="15.0dip"
            android:layout_alignParentRight="true"

            android:paddingRight="15.0dip"
            android:paddingTop="15.0dip"
            android:text="ما يجب أن أقوم به 4"
            android:textColor="#ff5a5a5a"
            android:textSize="16.0sp" />

        <ImageView
            android:id="@+id/_checkBoxIcon3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15.0dip"
            android:src="@drawable/grey_checkbox" />
    </RelativeLayout>

</RelativeLayout>